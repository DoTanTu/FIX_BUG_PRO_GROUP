<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ao1Activity">


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/bgr_nav"
        app:itemIconTint="#F6F2F2"
        app:itemTextColor="#F6F2F2"
        app:menu="@menu/menu_nav" />

    <ImageButton
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/imageButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bttron"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_new_24" />

    <Button

        android:id="@+id/button3"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="680dp"
        android:background="@drawable/bogoc"
        android:text="Mua Hàng" />

    <Button

        android:id="@+id/button2"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="680dp"
        android:background="@drawable/bogoc"
        android:text="Thêm vào giỏ hàng" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        app:srcCompat="@drawable/ao3" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/bttron"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_new_24" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/bttron"
        app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="60dp"

        android:text="đ 79.000 - đ 89.000"
        android:textColor="@color/yellow"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="60dp"
        android:text="Áo sweatshirt"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginLeft="60dp"
        android:text="Được thiết kế với họa tiết phong cách Giáng Sinh và màu sắc tươi sáng, áo sweatshirt thú cưng rất hợp thời trang, sành điệu và đáng yêu cho thú cưng của bạn khi mặc.Áo sweatshirt cho thú cưng được làm từ chất liệu lông cừu cao cấp.Sản phẩm có 7 size để bạn lựa chọn:  S, M, L, XL"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_marginLeft="60dp"
        android:text="Nhắn tin cho shop để được tư vấn kĩ hơn."
        android:textSize="15sp" />


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_marginLeft="60dp"
        android:text="Size:S,Chiều dài lưng:28cm/11,Cân nặng:2kg-3kg "
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_marginLeft="60dp"
        android:text="Size:M,Chiều dài lưng:32cm/12.6,Cân nặng:3kg-4.5kg"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_marginLeft="60dp"
        android:text="Size:L,Chiều dài lưng:36cm/14.2,Cân nặng:4.5kg-6.5kg"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_marginLeft="60dp"
        android:text="Size:XL,Chiều dài lưng:42cm/16.5,Cân nặng:6.5kg-9.5kg"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_marginLeft="60dp"
        android:text="Kích thước:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button

        android:id="@+id/button4"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView10"
        android:layout_marginLeft="60dp"
        android:background="@drawable/bogoc"
        android:text="S" />
    <Button
        android:layout_marginLeft="140dp"
        android:layout_below="@+id/textView10"
        android:id="@+id/button5"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="@drawable/bogoc"
        android:text="M" />
    <Button
        android:layout_marginLeft="220dp"
        android:layout_below="@+id/textView10"
        android:id="@+id/button6"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="@drawable/bogoc"
        android:text="L" />
    <Button
        android:layout_marginLeft="300dp"
        android:layout_below="@+id/textView10"
        android:id="@+id/button7"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="@drawable/bogoc"
        android:text="XL" />

    <TextView

        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button7"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="7dp"
        android:text="Số lượng:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button8"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/button7"
        android:layout_marginLeft="160dp"
        android:text="-" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button7"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="10dp"
        android:text="1" />
    <Button
        android:id="@+id/button9"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/button7"
        android:layout_marginLeft="230dp"
        android:text="+" />
    <TextView

        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView11"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="12dp"
        android:text="Đánh giá:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_marginLeft="150dp"
        android:layout_below="@+id/textView11"
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/danhgia" />

    <TextView
        android:layout_marginLeft="260dp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/textView11"
        android:id="@+id/textViewdanhgia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(210+)" />


</RelativeLayout>