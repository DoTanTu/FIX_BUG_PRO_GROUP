<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ao1Activity">


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/bgr_nav"
        app:itemIconTint="#F6F2F2"
        app:itemTextColor="#F6F2F2"
        app:menu="@menu/menu_nav" />

    <ImageButton
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/imageButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bttron"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_new_24" />

    <Button

        android:id="@+id/button3"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="680dp"
        android:background="@drawable/bogoc"
        android:text="Mua Hàng" />

    <Button

        android:id="@+id/button2"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="680dp"
        android:background="@drawable/bogoc"
        android:text="Thêm vào giỏ hàng" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/thucan1" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/bttron"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_new_24" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/bttron"
        app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="60dp"

        android:text="đ 187.000 "
        android:textColor="@color/yellow"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="60dp"
        android:text="CATRANG - THỨC ĂN CHO MÈO "
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginLeft="60dp"
        android:text="- Áp dụng cho mọi loại mèo"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView19"
        android:layout_marginLeft="60dp"
        android:text="- Dễ tiêu hóa"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView18"
        android:layout_marginLeft="60dp"
        android:text="- Giàu dinh dưỡng"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_marginLeft="60dp"
        android:text="- Xuất xứ Hàn Quốc"
        android:textSize="14sp" />

    <TextView

        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView16"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="13dp"
        android:text="Loại:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button4"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView16"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bogoc"
        android:text="1 KG" />

    <Button
        android:id="@+id/button5"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView16"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bogoc"
        android:text="500 G" />


    <TextView

        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView17"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:text="Số lượng:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button8"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView17"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp"
        android:text="-" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView17"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="20dp"
        android:text="1" />

    <Button

        android:id="@+id/button9"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView17"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="10dp"
        android:text="+" />
    <TextView

        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView11"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="12dp"
        android:text="Đánh giá:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_marginLeft="150dp"
        android:layout_below="@+id/textView11"
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/danhgia" />

    <TextView
        android:layout_marginLeft="260dp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/textView11"
        android:id="@+id/textViewdanhgia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(210+)" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView20"
        android:layout_marginLeft="60dp"
        android:text="- Thức ăn cho mèo Catsrang được nhập khẩu trực tiếp từ Hàn Quốc chuyên dụng dành cho mèo giúp phòng ngừa loại bỏ lông thừa trong ruột."
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="60dp"
        android:text="- Khi cho ăn sản phẩm này nhờ dễ dàng tiêu hóa nên mèo sẽ đi ra phân rắn và giảm mùi khó chịu."
        android:textSize="14sp" />
    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView15"
        android:layout_marginLeft="60dp"
        android:text="- Thức ăn cho mèo Catsrang là sản phẩm phù hợp cho tăng cường vẻ đẹp da và lông, phòng tránh bệnh quáng gà nhờ các chất dinh dưỡng được cũng cấp cân bằng và đầy đủ."
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView21"
        android:layout_marginLeft="60dp"
        android:text="- Phòng tránh các bệnh có thể phát sinh cho mèo."
        android:textSize="14sp" />



</RelativeLayout>