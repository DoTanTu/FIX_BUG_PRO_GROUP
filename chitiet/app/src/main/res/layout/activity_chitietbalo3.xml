<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ao1Activity">


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/bgr_nav"
        app:itemIconTint="#F6F2F2"
        app:itemTextColor="#F6F2F2"
        app:menu="@menu/menu_nav" />

    <ImageButton
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/imageButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bttron"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_new_24" />

    <Button

        android:id="@+id/button3"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="680dp"
        android:background="@drawable/bogoc"
        android:text="Mua Hàng" />

    <Button

        android:id="@+id/button2"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="680dp"
        android:background="@drawable/bogoc"
        android:text="Thêm vào giỏ hàng" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        app:srcCompat="@drawable/balo3" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/bttron"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_new_24" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/bttron"
        app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="60dp"

        android:text="đ 150.000 - đ 200.000"
        android:textColor="@color/yellow"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="60dp"
        android:text="Balo đựng thú cưng"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginLeft="60dp"
        android:text="Ba lỗ thông gió ở cửa sổ phía trước và lưới ở bên cạnh để lưu thông và thông gió, giúp vật nuôi thoải mái hơn.Nội thất thoải mái: nâng cấp gấp đôi bên trong và bên ngoài. Bên trong thoải mái và thoáng khí để tăng không gian, với miếng đệm thoải mái để bảo vệ vật nuôi.Khóa điều chỉnh dây đeo vai, có thể tự điều chỉnh một cách thoải mái.Thoải mái và di động, gia cố có khả năng chịu lực lớn. Mang theo tay rộng rãi và thoải mái, thoải mái khi mang theo và cầm nắm mà không bị hạn chế.
       "
        android:textSize="14sp" />

    <TextView

        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView16"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="13dp"
        android:text="Màu:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button4"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView16"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bogoc"
        android:text="Trắng" />
    <Button
        android:id="@+id/button5"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView16"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bogoc"
        android:text="Vàng" />


    <TextView

        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView17"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:text="Số lượng:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button8"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView17"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp"
        android:text="-" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView17"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="20dp"
        android:text="1" />

    <Button

        android:id="@+id/button9"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView17"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="10dp"
        android:text="+" />
    <TextView

        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView11"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="12dp"
        android:text="Đánh giá:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_marginLeft="150dp"
        android:layout_below="@+id/textView11"
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/danhgia" />

    <TextView
        android:layout_marginLeft="260dp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/textView11"
        android:id="@+id/textViewdanhgia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(210+)" />

    <TextView
        android:layout_marginLeft="60dp"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:text="Chất liệu: PU"
        android:textSize="14sp" />
    <TextView
        android:layout_marginLeft="60dp"
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:text="Kích thước:Túi: 21 * 33 * 36cm"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView15"
        android:layout_marginLeft="60dp"
        android:text="Đồ chơi: chiều dài khoảng 23cm"
        android:textSize="14sp" />



</RelativeLayout>